<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.lucamps.controledefidelidade">

    <application
        android:name=".Util.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ControleDeFidelidade">
        <activity android:name=".Controller.SelecionarUsuario"></activity>
        <activity
            android:name=".Controller.GerarPontosActivity"
            android:label="Gerar Pontos"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Controller.GerenciarPontosActivity"
            android:label="Gerenciar Pontos"
            android:screenOrientation="portrait" />
        <activity android:name=".Controller.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>